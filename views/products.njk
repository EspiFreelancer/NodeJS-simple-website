{% extends layout %}

{% block content %}

<!-- Begin page content -->
<main role="main">

	<section class="jumbotron text-center">
		<div class="container">
			<h1 class="jumbotron-heading">{{ title }}</h1>
			<p class="lead text-muted">Usted esta en la tienda.</p>
		</div>
	</section>

	<div class="album py-5 bg-light">
		<div class="container">

			<div class="row">

			{% if arrayRobots %}
				
			{% for robot in arrayRobots %}
				
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<img class="card-img-top" src="/images/{{ robot.image }}" alt="{{ robot.name }}">
						<div class="card-body">
							<p class="card-text">Modelo: {{ robot.model }}</p>
							<h5>{{ robot.name }}</h5>
							<p class="card-text">Precio: ${{ robot.price }}</p>
							<small class="text-muted">Descripci√≥n: ${{ robot.description }}</small>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<a href="/">
									<button type="button" class="btn btn-sm btn-outline-secondary">+ Info</button>
									</a>
									<a href="/">
									<button type="button" class="btn btn-sm btn-outline-secondary">Comprar</button>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>

			{% endfor %}

			{% else %}

			<p>No se ingreso ningin articulo en la tienda aun.</p>

			{% endif %}

			</div>

		</div>
	</div>

</main>


{% endblock %}