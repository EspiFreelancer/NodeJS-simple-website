{% extends layout %}

{% block content %}

<!-- Begin page content -->
<main role="main">

	<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-graybrand">
		<div class="col-md-5 p-lg-5 mx-auto">
			<h1 class="display-5 font-weight-normal mt-4">{{ robot.name }}</h1>
			<p class="lead font-weight-normal">Licencia: {{ robot.description }}</p>
		</div>
	</div>


	<div class="album py-5 bg-light">
	<div class="container">
	<div class="row">

			<div class="col-md-6 card mb-4 box-shadow">
				<img class="card-img-top" src="/images/{{ robot.image }}" alt="{{ robot.name }}">
				<div class="card-body">
				</div>
			</div>

		<div class="col-md-6">
			<div class="card mb-4 box-shadow">
				<div class="card-body">
					<p class="card-text">Modelo: {{ robot.model }}</p>
					<p class="card-text">Precio: ${{ robot.price }}</p>
				</div>
			</div>
		</div>

	</div>
	</div>
	</div>

</main>


{% endblock %}